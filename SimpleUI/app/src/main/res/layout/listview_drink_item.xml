<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/drinkImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DrinkName"
        android:id="@+id/drinkNameTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/drinkImageView"
        android:layout_toEndOf="@+id/drinkImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="M:"
        android:id="@+id/textView"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/drinkImageView"
        android:layout_toEndOf="@+id/drinkImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="35"
        android:id="@+id/mPriceTextview"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L:"
        android:id="@+id/textView2"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/mPriceTextview"
        android:layout_toEndOf="@+id/mPriceTextview"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45"
        android:id="@+id/lPriceTextview"
        android:layout_below="@+id/drinkNameTextView"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="10dp" />

</RelativeLayout>